
<div class="container-fluid bg-dark pt-3 pb-1">
    @if (!Initialised)
    {
        <div class="card mb-3">
            <div class="card-body placeholder-glow">
                <h5 class="card-title placeholder col-10"></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary placeholder col-6"></h6>
            </div>
        </div>
    }
    else
    {
        @foreach (var section in Workout.Sections)
        {
            <div class="card mb-3 bg-secondary px-1">
                <div class="card-subtitle mt-1">
                    @(section.Section.ToString())
                </div>
                <div class="card-body">
                    @foreach (var exercise in section.Exercises)
                    {
                        <div class="card">
                            <div class="card-body placeholder-glow">
                                <h5 class="card-title placeholder col-10"></h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary placeholder col-6"></h6>
                            </div>
                        </div>
                    }
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="..." class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        @(section.Section.ToString())
                                    </h5>
                                    <h6 class="card-text mb-2 text-body-secondary placeholder col-6"></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>