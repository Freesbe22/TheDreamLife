@if (!Initialised)
{
        <div class="card mb-3">
            <div class="card-body placeholder-glow">
                <h5 class="card-title placeholder col-10"></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary placeholder col-6"></h6>
            </div>
        </div>
}
else
{
    if (Phase.Workouts != null)
    {
        @foreach (var workout in Phase.Workouts)
        {
                        <div class="card mb-3 bg-secondary text-light" @onclick="(()=> OnWorkoutClick(workout))">
                        <div class="row g-0">
                            <div class="col-md-4">
                            <img src="..." class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                            <h5 class="card-title">@workout.Name</h5>
                            @if (workout.Sections != null)
                            {
                                    <p class="card-text">@workout.Sections.Count() exercises</p>
                            }
                            @* <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p> *@
                                    <WorkoutEditView Phase="@Phase" OnWorkoutChange="(()=>OnWorkoutChanged())" Workout="workout"></WorkoutEditView>
                            </div>
                        </div>
                    </div>
                </div>
        }
    }
    <div class="card mb-3 bg-secondary">
            <div class="row g-0">
                <WorkoutEditView Phase="@Phase" OnWorkoutChange="(()=>OnWorkoutChanged())"></WorkoutEditView>
            </div>
        </div>
}